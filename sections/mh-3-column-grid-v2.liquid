      "default": "A simple daily routine designed to fit into how you already feed your dog"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA button text"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA button link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "card_radius",
      "label": "Card border radius",
      "min": 0,
      "max": 32,
      "step": 2,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section background",
      "default": "#EFEDEB"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Card subheading color",
      "default": "#9C948B"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Card",
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon",
          "info": "SVG or PNG icon displayed above subheading"
        },
        {
          "type": "range",
          "id": "icon_width",
          "label": "Icon width",
          "min": 24,
          "max": 96,
          "step": 4,
          "default": 48,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Step one"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Measure"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Use the feeding guide to measure the right number of scoops based on your dog's weight"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MH 3 Column Grid V2",
      "settings": {
        "heading": "How to use MD1",
        "description": "A simple daily routine designed to fit into how you already feed your dog",
        "cta_text": "Pre-order MD1"
      },
      "blocks": [
        {
          "type": "card",
          "settings": {
            "subheading": "Step one",
            "heading": "Measure",
            "description": "Use the feeding guide to measure the right number of scoops based on your dog's weight"
          }
        },
        {
          "type": "card",
          "settings": {
            "subheading": "Step two",
            "heading": "Topper or broth",
            "description": "Sprinkle over food as a daily topper, or mix with a small amount of warm water to create a collagen broth"
