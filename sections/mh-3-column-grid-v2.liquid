{%- comment -%}
  MH 3 Column Grid V2 Section
  - Heading, description, and optional CTA button
  - 3-column grid of cards with icon, subheading, heading, description
  - Card styling matches mh-card-carousel-2
{%- endcomment -%}

{%- assign section_bg_rgb = section.settings.background_color | color_to_rgb -%}

<style>
  [data-section-id="{{ section.id }}"] {
    {% if section_bg_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --mh-grid-2-bg: {{ section.settings.background_color }};
    {% else %}
      --mh-grid-2-bg: transparent;
    {% endif %}
    --mh-grid-2-padding-top: {{ section.settings.padding_top }}px;
    --mh-grid-2-padding-bottom: {{ section.settings.padding_bottom }}px;
    --mh-grid-2-radius: {{ section.settings.card_radius }}px;
  }

  [data-section-id="{{ section.id }}"].mh-grid-2 {
    background-color: var(--mh-grid-2-bg);
    padding-top: var(--mh-grid-2-padding-top);
    padding-bottom: var(--mh-grid-2-padding-bottom);
  }

  [data-section-id="{{ section.id }}"] .mh-grid-2__inner {
    max-width: var(--site-max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header row */
  [data-section-id="{{ section.id }}"] .mh-grid-2__header {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  [data-section-id="{{ section.id }}"] .mh-grid-2__header-row {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Description */
  [data-section-id="{{ section.id }}"] .mh-grid-2__description {
    max-width: 600px;
  }

  /* Grid layout */
  [data-section-id="{{ section.id }}"] .mh-grid-2__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    margin-top: 3rem;
  }

  /* Card styling - matches mh-card-carousel-2 */
  [data-section-id="{{ section.id }}"] .mh-grid-2__card {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    border-radius: var(--mh-grid-2-radius);
    background-color: #FDFCFC;
    border: 1px solid #DFDBD8;
    box-shadow: 0px 2px 12px rgba(0, 0, 0, 0.04);
    padding: 2.5rem 1.5rem;
    height: 100%;
  }

  /* Card icon */
  [data-section-id="{{ section.id }}"] .mh-grid-2__icon {
    margin-bottom: 1.5rem;
  }

  [data-section-id="{{ section.id }}"] .mh-grid-2__icon img {
    display: block;
    width: auto;
    height: auto;
    max-width: 100%;
  }

  /* Card subheading - matches mh-card-2__subheading */
  [data-section-id="{{ section.id }}"] .mh-grid-2__subheading {
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    font-size: 12px;
    letter-spacing: 0.01em;
    text-transform: uppercase;
    color: {{ section.settings.subheading_color }};
    margin: 0 0 0.75rem 0;
  }

  /* Card heading */
  [data-section-id="{{ section.id }}"] .mh-grid-2__card-heading {
    margin-bottom: 1rem;
  }

  /* Card description */
  [data-section-id="{{ section.id }}"] .mh-grid-2__card-description {
    line-height: 1.6;
  }

  /* Desktop styles */
  @media (min-width: 900px) {
    [data-section-id="{{ section.id }}"] .mh-grid-2__header-row {
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
    }

    [data-section-id="{{ section.id }}"] .mh-grid-2__grid {
      grid-template-columns: repeat(3, 1fr);
    }

    [data-section-id="{{ section.id }}"] .mh-grid-2__card {
      padding: 3rem 2rem;
    }
  }

  /* Large desktop - 6.4rem padding */
  @media (min-width: 1200px) {
    [data-section-id="{{ section.id }}"] .mh-grid-2__inner {
      padding: 0 6.4rem;
    }
  }
</style>

<div data-section-id="{{ section.id }}" class="mh-grid-2">
  <div class="mh-grid-2__inner">
    {% if section.settings.heading != blank or section.settings.cta_text != blank or section.settings.description != blank %}
      <div class="mh-grid-2__header">
        <div class="mh-grid-2__header-row">
          {% if section.settings.heading != blank %}
            <h2 class="mh-heading-2">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
            <a class="mh-button--primary" href="{{ section.settings.cta_url }}">
              {{ section.settings.cta_text }}
            </a>
          {% endif %}
        </div>
        {% if section.settings.description != blank %}
          <p class="mh-body-large mh-grid-2__description">{{ section.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size == 0 %}
      <p style="text-align: center; padding: 2rem; color: #666;">Add card blocks using the theme editor</p>
    {% else %}
      <div class="mh-grid-2__grid">
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'card' %}
              <div class="mh-grid-2__card" {{ block.shopify_attributes }}>
                {% if block.settings.icon != blank %}
                  <div class="mh-grid-2__icon" style="width: {{ block.settings.icon_width }}px;">
                    <img
                      src="{{ block.settings.icon | image_url: width: 200 }}"
                      alt="{{ block.settings.icon.alt | escape }}"
                      width="{{ block.settings.icon_width }}"
                      height="auto"
                      loading="lazy"
                    >
                  </div>
                {% endif %}
                {% if block.settings.subheading != blank %}
                  <span class="mh-grid-2__subheading">{{ block.settings.subheading }}</span>
                {% endif %}
                {% if block.settings.heading != blank %}
                  <h3 class="mh-heading-3 mh-grid-2__card-heading">{{ block.settings.heading }}</h3>
                {% endif %}
                {% if block.settings.description != blank %}
                  <p class="mh-body-small mh-grid-2__card-description">{{ block.settings.description }}</p>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "MH 3 Column Grid V2",
  "tag": "section",
  "class": "mh-3-column-grid-v2-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Header"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "How to use MD1"
    },
    {
