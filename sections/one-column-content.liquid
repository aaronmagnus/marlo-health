    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Content max width",
      "min": 600,
      "max": 1200,
      "step": 50,
      "default": 900,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 150,
      "step": 10,
      "default": 80,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 150,
      "step": 10,
      "default": 80,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "MH 1 Column Content"
    }
  ]
}
{% endschema %}
