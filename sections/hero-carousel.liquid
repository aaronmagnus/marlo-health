{%- comment -%}
  Hero Carousel Section
  - Full-width hero slides with background images
  - Repeatable slide blocks with title, description, CTA
  - Configurable overlay, autoplay, and responsive layout
  - Separate mobile/desktop images supported
{%- endcomment -%}

{{ 'swiper.css' | asset_url | stylesheet_tag }}

<style>
  [data-section-id="{{ section.id }}"] {
    --hero-carousel-min-height: {{ section.settings.min_height }}px;
    --hero-carousel-text-color: {{ section.settings.text_color }};
    --hero-carousel-cta-bg: {{ section.settings.cta_background }};
    --hero-carousel-cta-text: {{ section.settings.cta_text_color }};
    --hero-carousel-padding-top: {{ section.settings.padding_top }}px;
    --hero-carousel-padding-bottom: {{ section.settings.padding_bottom }}px;
    --hero-carousel-heading-font: {{ section.settings.heading_font }}, sans-serif;
    --hero-carousel-body-font: {{ section.settings.body_font }}, sans-serif;
    --hero-carousel-button-font: {{ section.settings.button_font }}, sans-serif;
    --hero-carousel-arrow-width: 48px;
    --hero-carousel-arrow-clearance: 60px;
    --hero-carousel-content-max-width: 444px;
    --hero-carousel-autoplay-speed: {{ section.settings.autoplay_speed }}s;
  }

  [data-section-id="{{ section.id }}"].hero-carousel {
    position: relative;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  /* Override any theme section spacing */
  .hero-carousel-section {
    margin: 0 !important;
    padding: 0 !important;
  }

  [data-section-id="{{ section.id }}"] .wt-slider__container {
    padding-bottom: 0 !important;
  }

  [data-section-id="{{ section.id }}"] .swiper {
    width: 100%;
    position: relative;
  }

  [data-section-id="{{ section.id }}"] .swiper-wrapper {
    /* Remove any default margin/padding */
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__slide {
    position: relative;
    min-height: var(--hero-carousel-min-height);
    display: flex;
    flex-direction: column;
    width: 100%;
    height: auto;
  }

  /* Image wrapper - fills entire slide */
  [data-section-id="{{ section.id }}"] .hero-carousel__image-wrapper {
    position: absolute;
    inset: 0;
    background-color: #f0f0f0;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__image--mobile {
    display: block;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__image--desktop {
    display: none;
  }

  /* Video backgrounds */
  [data-section-id="{{ section.id }}"] .hero-carousel__video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__video video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__video--mobile {
    display: block;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__video--desktop {
    display: none;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  /* Content area - overlaid on image */
  [data-section-id="{{ section.id }}"] .hero-carousel__content {
    position: relative;
    z-index: 2;
    padding: 1.5rem 1.5rem 3.5rem 1.5rem;
    margin-top: auto;
    max-width: var(--hero-carousel-content-max-width);
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    color: var(--hero-carousel-text-color);
    font-family: var(--hero-carousel-body-font);
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__title {
    font-size: 1.75rem;
    font-weight: 600;
    line-height: 1.1;
    margin: 0;
    font-family: var(--hero-carousel-heading-font);
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__description {
    font-size: 1.6rem;
    line-height: 1.5;
    margin: 0;
    opacity: 0.85;
  }

  /* Tablet */
  @media (min-width: 600px) {
    [data-section-id="{{ section.id }}"] .hero-carousel__title {
      font-size: 2.25rem;
    }
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1.6rem;
    background-color: var(--hero-carousel-cta-bg);
    color: var(--hero-carousel-cta-text);
    text-decoration: none;
    font-weight: 500;
    font-family: var(--hero-carousel-button-font);
    font-size: 1.6rem;
    border-radius: 50px;
    transition: opacity 0.2s ease;
    width: calc(100% - 3rem);
    margin-top: 0.5rem;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__cta:hover {
    opacity: 0.85;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__cta-arrow {
    display: inline-block;
    width: 7px;
    height: 7px;
    border-style: solid;
    border-width: 0 2px 2px 0;
    border-color: currentColor;
    transform: rotate(-45deg);
  }

  /* Navigation arrows - edge-pinned style */
  [data-section-id="{{ section.id }}"] .hero-carousel__nav {
    display: none;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    width: 48px;
    height: 56px;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    border: none;
    background: rgba(255, 255, 255, 0.95);
    color: #333;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__nav-prev,
  [data-section-id="{{ section.id }}"] .swiper-button-prev.hero-carousel__nav-prev {
    left: 0 !important;
    right: auto !important;
    margin-left: 0 !important;
    border-radius: 0 8px 8px 0;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__nav-next,
  [data-section-id="{{ section.id }}"] .swiper-button-next.hero-carousel__nav-next {
    right: 0 !important;
    left: auto !important;
    margin-right: 0 !important;
    border-radius: 8px 0 0 8px;
  }

  /* Override theme slider styles */
  [data-section-id="{{ section.id }}"] .wt-slider__nav-prev,
  [data-section-id="{{ section.id }}"] .wt-slider__nav-next {
    left: unset !important;
    right: unset !important;
  }

  [data-section-id="{{ section.id }}"] .wt-slider__nav-prev {
    left: 0 !important;
  }

  [data-section-id="{{ section.id }}"] .wt-slider__nav-next {
    right: 0 !important;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__nav-btn:hover {
    background: rgba(255, 255, 255, 1);
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__nav-btn.swiper-button-disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__nav-btn::after {
    display: none;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__arrow {
    display: grid;
    place-items: center;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__arrow::before {
    content: "";
    width: 12px;
    height: 12px;
    border-style: solid;
    border-width: 0 2px 2px 0;
    border-color: currentColor;
    transform: rotate(-45deg);
    margin-left: -4px;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__nav-prev .hero-carousel__arrow::before {
    border-width: 2px 0 0 2px;
    margin-left: 4px;
    margin-right: 0;
  }

  /* Pagination - mobile: bottom left, desktop: bottom right */
  [data-section-id="{{ section.id }}"] .hero-carousel__pagination.swiper-pagination {
    position: absolute !important;
    bottom: 1rem !important;
    left: 1rem !important;
    right: auto !important;
    top: auto !important;
    width: auto !important;
    z-index: 10;
    display: inline-flex;
    gap: 0.375rem;
    padding: 0.5rem 0.75rem;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border-radius: 20px;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__pagination .swiper-pagination-bullet {
    width: 16px;
    height: 3px;
    border-radius: 2px;
    background: rgba(0, 0, 0, 0.25);
    opacity: 1;
    margin: 0 !important;
    position: relative;
    overflow: hidden;
    transition: width 0.3s ease, background 0.3s ease;
  }

  [data-section-id="{{ section.id }}"] .hero-carousel__pagination .swiper-pagination-bullet-active {
    width: 32px;
    background: rgba(0, 0, 0, 0.25);
  }

  /* Progress fill animation for autoplay */
  {% if section.settings.autoplay %}
    @keyframes hero-carousel-progress-fill {
      from { width: 0; }
      to { width: 100%; }
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__pagination .swiper-pagination-bullet-active::after {
      content: "";
      position: absolute;
      left: 0;
      top: 0;
      height: 100%;
      width: 0;
      background: rgba(0, 0, 0, 0.8);
      border-radius: 2px;
      animation: hero-carousel-progress-fill var(--hero-carousel-autoplay-speed) linear forwards;
    }
  {% else %}
    [data-section-id="{{ section.id }}"] .hero-carousel__pagination .swiper-pagination-bullet-active {
      background: rgba(0, 0, 0, 0.8);
    }
  {% endif %}

  /* Desktop layout */
  @media (min-width: 900px) {
    [data-section-id="{{ section.id }}"] .hero-carousel__slide {
      flex-direction: row;
      align-items: stretch;
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__image--mobile {
      display: none;
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__image--desktop {
      display: block;
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__video--mobile {
      display: none;
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__video--desktop {
      display: block;
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__content {
      margin-top: 0;
      padding: var(--hero-carousel-padding-top) var(--hero-carousel-arrow-clearance) var(--hero-carousel-padding-bottom) var(--hero-carousel-arrow-clearance);
      justify-content: center;
      gap: 1rem;
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__title {
      font-size: 2.75rem;
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__nav {
      display: block;
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__pagination.swiper-pagination {
      left: auto !important;
      right: 1.5rem !important;
      bottom: 1.5rem !important;
      z-index: 10;
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__cta {
      width: fit-content;
      justify-content: flex-start;
    }
  }

  /* Large desktop */
  @media (min-width: 1200px) {
    [data-section-id="{{ section.id }}"] .hero-carousel__content {
      padding-left: 6rem;
    }

    [data-section-id="{{ section.id }}"] .hero-carousel__title {
      font-size: 3rem;
    }
  }

  /* Block-level overlay styles */
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'slide' %}
        {%- assign overlay_opacity = block.settings.overlay_opacity | divided_by: 100.0 -%}
        [data-block-id="{{ block.id }}"] .hero-carousel__overlay {
          background: {{ block.settings.overlay_color | color_modify: 'alpha', overlay_opacity }};
        }
        {% if block.settings.text_color != blank and block.settings.text_color != 'rgba(0,0,0,0)' %}
          [data-block-id="{{ block.id }}"] .hero-carousel__content {
            color: {{ block.settings.text_color }};
          }
        {% endif %}
    {% endcase %}
  {% endfor %}
</style>

<script type="module" src="{{ 'slider.js' | asset_url }}" defer="defer"></script>

<section data-section-id="{{ section.id }}" class="hero-carousel">
  {% if section.blocks.size == 0 %}
    <div style="min-height: 400px; display: flex; align-items: center; justify-content: center; background: #f0f0f0; color: #666;">
      Add slide blocks using the theme editor
    </div>
  {% else %}
    <slideshow-section class="hero-carousel__slider">
      <div data-swiper class="swiper">
        <div data-swiper-container class="swiper-wrapper">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'slide' %}
                <div
                  data-swiper-slide
                  class="swiper-slide hero-carousel__slide"
                  data-block-id="{{ block.id }}"
                  {{ block.shopify_attributes }}
                >
                  <div class="hero-carousel__image-wrapper">
                    {% if block.settings.media_type == 'video' %}
                      {%- assign desktop_video = block.settings.video -%}
                      {%- assign mobile_video = block.settings.mobile_video | default: desktop_video -%}

                      {% if mobile_video != blank %}
                        <div class="hero-carousel__video hero-carousel__video--mobile">
                          {{ mobile_video | video_tag: autoplay: true, loop: true, muted: true, controls: false, image_size: '800x' }}
                        </div>
                      {% endif %}

                      {% if desktop_video != blank %}
                        <div class="hero-carousel__video hero-carousel__video--desktop">
                          {{ desktop_video | video_tag: autoplay: true, loop: true, muted: true, controls: false, image_size: '1920x' }}
                        </div>
                      {% endif %}
                    {% else %}
                      {%- assign desktop_image = block.settings.image -%}
                      {%- assign mobile_image = block.settings.mobile_image | default: desktop_image -%}

                      {% if mobile_image != blank %}
                        <img
                          class="hero-carousel__image hero-carousel__image--mobile"
                          src="{{ mobile_image | image_url: width: 800 }}"
                          srcset="
                            {{ mobile_image | image_url: width: 400 }} 400w,
                            {{ mobile_image | image_url: width: 600 }} 600w,
                            {{ mobile_image | image_url: width: 800 }} 800w
                          "
                          sizes="100vw"
                          alt="{{ mobile_image.alt | escape }}"
                          loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                          width="{{ mobile_image.width }}"
                          height="{{ mobile_image.height }}"
                        >
                      {% endif %}

                      {% if desktop_image != blank %}
                        <img
                          class="hero-carousel__image hero-carousel__image--desktop"
                          src="{{ desktop_image | image_url: width: 1920 }}"
                          srcset="
                            {{ desktop_image | image_url: width: 1200 }} 1200w,
                            {{ desktop_image | image_url: width: 1600 }} 1600w,
                            {{ desktop_image | image_url: width: 1920 }} 1920w
                          "
                          sizes="100vw"
                          alt="{{ desktop_image.alt | escape }}"
                          loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                          width="{{ desktop_image.width }}"
                          height="{{ desktop_image.height }}"
                        >
                      {% endif %}
                    {% endif %}

                    <div class="hero-carousel__overlay"></div>
                  </div>
                  <div class="hero-carousel__content">
                    {% if block.settings.title != blank %}
                      <h2 class="hero-carousel__title">{{ block.settings.title }}</h2>
                    {% endif %}
                    {% if block.settings.description != blank %}
                      <p class="hero-carousel__description">{{ block.settings.description }}</p>
                    {% endif %}
                    {% if block.settings.cta_text != blank %}
                      <a
                        class="hero-carousel__cta"
                        {% if block.settings.cta_link != blank %}href="{{ block.settings.cta_link }}"{% endif %}
                      >
                        {{ block.settings.cta_text }}
                        <span class="hero-carousel__cta-arrow"></span>
                      </a>
                    {% endif %}
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>

        {% if section.blocks.size > 1 %}
          <div class="hero-carousel__nav">
            <button class="hero-carousel__nav-btn hero-carousel__nav-prev swiper-button-prev" aria-label="Previous slide">
              <span class="hero-carousel__arrow"></span>
            </button>
            <button class="hero-carousel__nav-btn hero-carousel__nav-next swiper-button-next" aria-label="Next slide">
              <span class="hero-carousel__arrow"></span>
            </button>
          </div>
          <div class="hero-carousel__pagination swiper-pagination"></div>
        {% endif %}
      </div>

      <script data-swiper-configuration type="text/json">
        {
          "slidesPerView": 1,
          "grabCursor": true,
          "enableOnMedia": "(min-width: 0px)",
          {% if section.blocks.size > 1 %}
            "loop": true,
            {% if section.settings.autoplay %}
              "autoplay": {
                "delay": {{ section.settings.autoplay_speed | times: 1000 }},
                "disableOnInteraction": false
              },
            {% endif %}
            "pagination": {
              "el": ".hero-carousel__pagination",
              "clickable": true
            },
            "navigation": {
              "nextEl": ".hero-carousel__nav-next",
              "prevEl": ".hero-carousel__nav-prev"
            }
          {% else %}
            "loop": false
          {% endif %}
        }
      </script>
    </slideshow-section>

    {% if section.settings.autoplay %}
      <script>
        (function() {
          const section = document.querySelector('[data-section-id="{{ section.id }}"]');
          const slider = section?.querySelector('slideshow-section');
          if (!slider) return;

          // Wait for Swiper to initialize, then enable autoplay on mobile
          const checkSwiper = setInterval(() => {
            if (slider.swiper) {
              clearInterval(checkSwiper);
              if (window.innerWidth < 900 && !slider.swiper.autoplay.running) {
                slider.swiper.params.autoplay = {
                  delay: {{ section.settings.autoplay_speed | times: 1000 }},
                  disableOnInteraction: false
                };
                slider.swiper.autoplay.start();
              }
            }
          }, 100);

          // Clear interval after 5 seconds to prevent memory leaks
          setTimeout(() => clearInterval(checkSwiper), 5000);
        })();
      </script>
    {% endif %}
  {% endif %}
</section>

