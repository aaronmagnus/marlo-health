<script>
  document.addEventListener('DOMContentLoaded', function() {
    const section = document.querySelector('[data-section-id="{{ section.id }}"]');
    const imageWrapper = section ? section.querySelector('.two-col-content__image-wrapper') : null;
    const video = imageWrapper ? imageWrapper.querySelector('.two-col-content__video') : null;

    if (video && imageWrapper) {
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting && !imageWrapper.dataset.videoPlayed) {
            imageWrapper.classList.add('video-visible');
            video.play().catch(() => {});
            imageWrapper.dataset.videoPlayed = 'true';
          }
        });
      }, { threshold: 0.5 });

      video.addEventListener('ended', () => {
        imageWrapper.classList.remove('video-visible');
      });

      observer.observe(imageWrapper);
    }
  });
</script>

