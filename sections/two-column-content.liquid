{%- comment -%}
  Two Column Content Section
  - Desktop: Side-by-side layout (order determined by block order in editor)
  - Mobile: Stacked layout (order determined by block order in editor)
  - Content includes headline, subheading, checklist with ticks, CTA button
{%- endcomment -%}

{%- assign section_bg_rgb = section.settings.background_color | color_to_rgb -%}

<style>
  [data-section-id="{{ section.id }}"] {
    {% if section_bg_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --two-col-bg: {{ section.settings.background_color }};
    {% else %}
      --two-col-bg: #f5f5f0;
    {% endif %}
    --two-col-text: {{ section.settings.text_color }};
    --two-col-btn-bg: {{ section.settings.button_background }};
    --two-col-btn-text: {{ section.settings.button_text_color }};
    --two-col-check-color: {{ section.settings.checkmark_color }};
    --two-col-padding-top: {{ section.settings.padding_top }}px;
    --two-col-padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  [data-section-id="{{ section.id }}"].two-col-content {
    background-color: var(--two-col-bg);
    color: var(--two-col-text);
    padding-top: 0 !important;
    padding-bottom: 0 !important;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__inner {
    display: flex;
    flex-direction: column;
  }

  /* Hide on mobile */
  [data-section-id="{{ section.id }}"] .two-col-content__hide-mobile {
    display: none;
  }

  @media (min-width: 900px) {
    [data-section-id="{{ section.id }}"] .two-col-content__hide-mobile {
      display: block;
    }

    [data-section-id="{{ section.id }}"] .two-col-content__image-col.two-col-content__hide-mobile,
    [data-section-id="{{ section.id }}"] .two-col-content__content-col.two-col-content__hide-mobile {
      display: flex;
    }
  }

  /* Image column */
  [data-section-id="{{ section.id }}"] .two-col-content__image-col {
    width: 100%;
    padding: var(--two-col-padding-top) 1.5rem var(--two-col-padding-bottom);
  }

  [data-section-id="{{ section.id }}"] .two-col-content__image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: var(--two-col-image-aspect, 1 / 1);
    overflow: hidden;
    border-radius: 16px;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__image-wrapper--landscape {
    --two-col-image-aspect: 4 / 3;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__image-wrapper--square {
    --two-col-image-aspect: 1 / 1;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__image-wrapper--portrait {
    --two-col-image-aspect: 3 / 4;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__caption {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    font-size: 16px;
    letter-spacing: 0.01em;
    color: #FDFCFC;
    background: rgba(253, 252, 252, 0.08);
    border: 1px solid rgba(253, 252, 252, 0.16);
    border-radius: 999px;
    padding: 8px 16px;
    z-index: 1;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: var(--two-col-image-fit, contain);
    transition: opacity 0.3s ease;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__image-wrapper.video-visible .two-col-content__video {
    opacity: 1;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__image-wrapper.video-visible .two-col-content__image {
    opacity: 0;
  }

  /* Content column */
  [data-section-id="{{ section.id }}"] .two-col-content__content-col {
    width: 100%;
    padding: var(--two-col-padding-top) 1.5rem var(--two-col-padding-bottom);
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__headline {
    margin: 0;
    text-align: left;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__subheading {
    font-size: 1.6rem;
    line-height: 1.5;
    margin: 0;
    text-align: center;
    opacity: 0.9;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__body {
    font-size: 1.6rem;
    line-height: 1.7;
    margin: 0 0 2.4rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__body p {
    margin: 0 0 1rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__body p:last-child {
    margin-bottom: 0;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__body a {
    color: inherit;
    text-decoration: underline;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__body a:hover {
    opacity: 0.7;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__list {
    list-style: none;
    padding: 0;
    margin: 1rem 0 2.4rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__list-item {
    display: flex;
    align-items: flex-start;
    gap: 1.2rem;
    font-size: 1.6rem;
    line-height: 1.5;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__check {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    margin-top: 2px;
    color: var(--two-col-check-color);
  }

  [data-section-id="{{ section.id }}"] .mh-button--primary {
    align-self: flex-start;
  }

  /* Comparison Table */
  [data-section-id="{{ section.id }}"] .two-col-content__table {
    width: 100%;
    margin-top: 1.5rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-header {
    display: grid;
    grid-template-columns: 1fr 70px 110px;
    gap: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid currentColor;
    font-size: 1.4rem;
    align-items: end;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-header-cell {
    text-align: center;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-header-cell:first-child {
    text-align: left;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-row {
    display: grid;
    grid-template-columns: 1fr 70px 110px;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    align-items: center;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-cell {
    font-size: 1.5rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-cell:not(:first-child) {
    text-align: center;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-cell--name {
    font-weight: 400;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-check {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    background-color: var(--two-col-table-check-color, #22c55e);
    border-radius: 50%;
    color: white;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-check svg {
    width: 14px;
    height: 14px;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-total {
    display: grid;
    grid-template-columns: 1fr 70px 110px;
    gap: 1rem;
    padding: 1.25rem 0;
    border-top: 2px solid currentColor;
    margin-top: -1px;
    align-items: center;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-total-label {
    font-size: 1.5rem;
    font-weight: 600;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-total-value {
    font-size: 1.5rem;
    text-align: center;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-total-value--highlight {
    font-weight: 700;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__table-disclaimer {
    font-size: 1.2rem;
    font-style: italic;
    opacity: 0.7;
    margin-top: 1.5rem;
    line-height: 1.5;
  }

  /* Offer Block */
  [data-section-id="{{ section.id }}"] .two-col-content__offer {
    width: 100%;
    margin-top: 1.5rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-product {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    padding-bottom: 1.25rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.15);
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-product-info {
    flex: 1;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-product-name {
    font-size: 1.6rem;
    font-weight: 600;
    margin: 0 0 0.25rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-product-desc {
    font-size: 1.4rem;
    opacity: 0.7;
    margin: 0;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-price {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-price-current {
    font-size: 1.6rem;
    font-weight: 600;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-price-compare {
    font-size: 1.4rem;
    text-decoration: line-through;
    opacity: 0.5;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-extras-header {
    font-size: 1.1rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 1.5rem 0 1rem;
    opacity: 0.6;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-extra {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-extra-info {
    flex: 1;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-extra-name {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 0.25rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-extra-desc {
    font-size: 1.3rem;
    opacity: 0.7;
    margin: 0;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-total {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.25rem 0;
    border-top: 2px solid currentColor;
    margin-top: -1px;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-total-label {
    font-size: 1.6rem;
    font-weight: 600;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-total-price {
    font-size: 1.6rem;
    font-weight: 700;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-disclaimer {
    font-size: 1.2rem;
    font-style: italic;
    opacity: 0.6;
    margin-top: 1rem;
    text-align: center;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 1.5rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.3rem;
  }

  [data-section-id="{{ section.id }}"] .two-col-content__offer-badge-check {
    width: 16px;
    height: 16px;
    color: var(--two-col-check-color);
    flex-shrink: 0;
  }

  /* Desktop layout */
  @media (min-width: 900px) {
    [data-section-id="{{ section.id }}"] .two-col-content__inner {
      flex-direction: row;
      min-height: 600px;
      max-width: var(--site-max-width);
      margin-left: auto;
      margin-right: auto;
    }

    [data-section-id="{{ section.id }}"] .two-col-content__image-col {
      width: 50%;
      padding: 0;
    }

    [data-section-id="{{ section.id }}"] .two-col-content__image-col--cover {
      padding: 6.4rem;
    }

    [data-section-id="{{ section.id }}"] .two-col-content__image-wrapper {
      aspect-ratio: auto;
      height: 100%;
    }

    [data-section-id="{{ section.id }}"] .two-col-content__content-col {
      width: 50%;
      padding: var(--two-col-padding-top) 4rem var(--two-col-padding-bottom);
      justify-content: center;
    }

    [data-section-id="{{ section.id }}"] .two-col-content__headline {
      text-align: left;
    }

    [data-section-id="{{ section.id }}"] .two-col-content__subheading {
      font-size: 1.8rem;
      text-align: left;
    }

    [data-section-id="{{ section.id }}"] .two-col-content__body {
      font-size: 1.8rem;
      text-align: left;
    }
  }

  /* Large desktop */
  @media (min-width: 1200px) {
    [data-section-id="{{ section.id }}"] .two-col-content__content-col {
      padding: var(--two-col-padding-top) 6.4rem var(--two-col-padding-bottom);
    }
  }
</style>

<section data-section-id="{{ section.id }}" class="two-col-content">
  <div class="two-col-content__inner">
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'list' -%}
          <div class="two-col-content__content-col{% if block.settings.hide_on_mobile %} two-col-content__hide-mobile{% endif %}" {{ block.shopify_attributes }}>
            {%- if block.settings.headline != blank -%}
              <h2 class="two-col-content__headline mh-heading-2">{{ block.settings.headline }}</h2>
            {%- endif -%}

            {%- if block.settings.subheading != blank -%}
              <p class="two-col-content__subheading">{{ block.settings.subheading }}</p>
            {%- endif -%}

            {%- assign has_list_items = false -%}
            {%- if block.settings.list_item_1 != blank or block.settings.list_item_2 != blank or block.settings.list_item_3 != blank or block.settings.list_item_4 != blank or block.settings.list_item_5 != blank or block.settings.list_item_6 != blank -%}
              {%- assign has_list_items = true -%}
            {%- endif -%}

            {%- if has_list_items -%}
              <ul class="two-col-content__list">
                {%- if block.settings.list_item_1 != blank -%}
                  <li class="two-col-content__list-item">
                    <svg class="two-col-content__check" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <span>{{ block.settings.list_item_1 }}</span>
                  </li>
                {%- endif -%}
                {%- if block.settings.list_item_2 != blank -%}
                  <li class="two-col-content__list-item">
                    <svg class="two-col-content__check" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <span>{{ block.settings.list_item_2 }}</span>
                  </li>
                {%- endif -%}
                {%- if block.settings.list_item_3 != blank -%}
                  <li class="two-col-content__list-item">
                    <svg class="two-col-content__check" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <span>{{ block.settings.list_item_3 }}</span>
                  </li>
                {%- endif -%}
                {%- if block.settings.list_item_4 != blank -%}
                  <li class="two-col-content__list-item">
                    <svg class="two-col-content__check" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <span>{{ block.settings.list_item_4 }}</span>
                  </li>
                {%- endif -%}
                {%- if block.settings.list_item_5 != blank -%}
                  <li class="two-col-content__list-item">
                    <svg class="two-col-content__check" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <span>{{ block.settings.list_item_5 }}</span>
                  </li>
                {%- endif -%}
                {%- if block.settings.list_item_6 != blank -%}
                  <li class="two-col-content__list-item">
                    <svg class="two-col-content__check" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <span>{{ block.settings.list_item_6 }}</span>
                  </li>
                {%- endif -%}
              </ul>
            {%- endif -%}

            {%- if block.settings.button_text != blank -%}
              <a
                class="mh-button--primary"
                {% if block.settings.button_link != blank %}href="{{ block.settings.button_link }}"{% endif %}
              >
                {{ block.settings.button_text }}
              </a>
            {%- endif -%}
          </div>

        {%- when 'content' -%}
          <div class="two-col-content__content-col{% if block.settings.hide_on_mobile %} two-col-content__hide-mobile{% endif %}" {{ block.shopify_attributes }}>
            {%- if block.settings.subheading != blank -%}
              <span class="mh-subheading">{{ block.settings.subheading }}</span>
            {%- endif -%}

            {%- if block.settings.headline != blank -%}
              <h2 class="two-col-content__headline mh-heading-2">{{ block.settings.headline }}</h2>
            {%- endif -%}

            {%- if block.settings.body != blank -%}
              <div class="two-col-content__body">{{ block.settings.body }}</div>
            {%- endif -%}

            {%- if block.settings.button_text != blank -%}
              <a
                class="mh-button--primary"
                {% if block.settings.button_link != blank %}href="{{ block.settings.button_link }}"{% endif %}
              >
                {{ block.settings.button_text }}
              </a>
            {%- endif -%}
          </div>

        {%- when 'image' -%}
          <div class="two-col-content__image-col{% if block.settings.image_fit == 'cover' %} two-col-content__image-col--cover{% endif %}{% if block.settings.hide_on_mobile %} two-col-content__hide-mobile{% endif %}" style="--two-col-image-fit: {{ block.settings.image_fit }};" {{ block.shopify_attributes }}>
            <div class="two-col-content__image-wrapper two-col-content__image-wrapper--{{ block.settings.aspect_ratio }}">
              {%- if block.settings.caption != blank -%}
                <span class="two-col-content__caption">{{ block.settings.caption }}</span>
              {%- endif -%}
              {%- if block.settings.image != blank -%}
                <img
                  class="two-col-content__image"
                  src="{{ block.settings.image | image_url: width: 1200 }}"
                  srcset="
                    {{ block.settings.image | image_url: width: 600 }} 600w,
                    {{ block.settings.image | image_url: width: 900 }} 900w,
                    {{ block.settings.image | image_url: width: 1200 }} 1200w
                  "
                  sizes="(max-width: 899px) 100vw, 50vw"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              {%- else -%}
                {{ 'lifestyle-2' | placeholder_svg_tag: 'two-col-content__image placeholder-svg' }}
              {%- endif -%}
              {%- if block.settings.video != blank -%}
                {{ block.settings.video | video_tag: autoplay: false, loop: false, muted: true, controls: false, class: 'two-col-content__video' }}
              {%- endif -%}
            </div>
          </div>

        {%- when 'comparison' -%}
          <div class="two-col-content__content-col{% if block.settings.hide_on_mobile %} two-col-content__hide-mobile{% endif %}" {{ block.shopify_attributes }}>
            {%- if block.settings.headline != blank -%}
              <h2 class="two-col-content__headline mh-heading-2">{{ block.settings.headline }}</h2>
            {%- endif -%}

            {%- if block.settings.subheading != blank -%}
              <p class="two-col-content__subheading">{{ block.settings.subheading }}</p>
            {%- endif -%}

            <div class="two-col-content__table" style="--two-col-table-check-color: {{ block.settings.checkmark_color }};">
              {%- comment -%} Table Header {%- endcomment -%}
              <div class="two-col-content__table-header">
                <div class="two-col-content__table-header-cell"></div>
                <div class="two-col-content__table-header-cell">{{ block.settings.column_1_label }}</div>
                <div class="two-col-content__table-header-cell">{{ block.settings.column_2_label }}</div>
              </div>

              {%- comment -%} Table Rows {%- endcomment -%}
              {%- if block.settings.row_1_name != blank -%}
                <div class="two-col-content__table-row">
                  <div class="two-col-content__table-cell two-col-content__table-cell--name">{{ block.settings.row_1_name }}</div>
                  <div class="two-col-content__table-cell">
                    <span class="two-col-content__table-check">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                    </span>
                  </div>
                  <div class="two-col-content__table-cell">{{ block.settings.row_1_cost }}</div>
                </div>
              {%- endif -%}

              {%- if block.settings.row_2_name != blank -%}
                <div class="two-col-content__table-row">
                  <div class="two-col-content__table-cell two-col-content__table-cell--name">{{ block.settings.row_2_name }}</div>
                  <div class="two-col-content__table-cell">
                    <span class="two-col-content__table-check">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                    </span>
                  </div>
                  <div class="two-col-content__table-cell">{{ block.settings.row_2_cost }}</div>
                </div>
              {%- endif -%}

              {%- if block.settings.row_3_name != blank -%}
                <div class="two-col-content__table-row">
                  <div class="two-col-content__table-cell two-col-content__table-cell--name">{{ block.settings.row_3_name }}</div>
                  <div class="two-col-content__table-cell">
                    <span class="two-col-content__table-check">
