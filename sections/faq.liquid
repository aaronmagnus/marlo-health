{%- comment -%}
  FAQ Section
  - Accordion-style expandable questions and answers
  - Uses native <details>/<summary> for accessibility
  - Each Q&A is a block
{%- endcomment -%}

{%- assign section_bg_rgb = section.settings.background_color | color_to_rgb -%}

<style>
  [data-section-id="{{ section.id }}"] {
    {% if section_bg_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --faq-bg: {{ section.settings.background_color }};
    {% else %}
      --faq-bg: #ffffff;
    {% endif %}
    --faq-text: {{ section.settings.text_color }};
    --faq-padding-top: {{ section.settings.padding_top }}px;
    --faq-padding-bottom: {{ section.settings.padding_bottom }}px;
    --faq-max-width: {{ section.settings.max_width }}px;
  }

  [data-section-id="{{ section.id }}"].faq {
    background-color: var(--faq-bg);
    color: var(--faq-text);
    padding-top: var(--faq-padding-top);
    padding-bottom: var(--faq-padding-bottom);
  }

  [data-section-id="{{ section.id }}"] .faq__inner {
    max-width: var(--faq-max-width);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  [data-section-id="{{ section.id }}"] .faq__heading {
    font-size: 2.8rem;
    font-weight: 400;
    line-height: 1.15;
    margin: 0 0 2rem;
    text-align: center;
  }

  [data-section-id="{{ section.id }}"] .faq__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  [data-section-id="{{ section.id }}"] .faq__item {
    border-bottom: 1px solid rgba(0, 0, 0, 0.12);
  }

  [data-section-id="{{ section.id }}"] .faq__item:first-child {
    border-top: 1px solid rgba(0, 0, 0, 0.12);
  }

  [data-section-id="{{ section.id }}"] .faq__details {
    padding: 0;
  }

  [data-section-id="{{ section.id }}"] .faq__summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem 0;
    cursor: pointer;
    list-style: none;
  }

  [data-section-id="{{ section.id }}"] .faq__summary::-webkit-details-marker {
    display: none;
  }

  [data-section-id="{{ section.id }}"] .faq__summary::marker {
    display: none;
    content: "";
  }

  [data-section-id="{{ section.id }}"] .faq__question {
    font-size: 1.6rem;
    font-weight: 600;
    line-height: 1.4;
    margin: 0;
    flex: 1;
  }

  [data-section-id="{{ section.id }}"] .faq__icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    position: relative;
  }

  [data-section-id="{{ section.id }}"] .faq__icon::before,
  [data-section-id="{{ section.id }}"] .faq__icon::after {
    content: "";
    position: absolute;
    background-color: currentColor;
    transition: transform 0.2s ease;
  }

  [data-section-id="{{ section.id }}"] .faq__icon::before {
    width: 100%;
    height: 2px;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
  }

  [data-section-id="{{ section.id }}"] .faq__icon::after {
    width: 2px;
    height: 100%;
    left: 50%;
    top: 0;
    transform: translateX(-50%);
  }

  [data-section-id="{{ section.id }}"] .faq__details[open] .faq__icon::after {
    transform: translateX(-50%) rotate(90deg);
    opacity: 0;
  }

  [data-section-id="{{ section.id }}"] .faq__answer {
    font-size: 1.5rem;
    line-height: 1.7;
    padding: 0 0 1.5rem;
    opacity: 0.85;
  }

  [data-section-id="{{ section.id }}"] .faq__answer p {
    margin: 0 0 1rem;
  }

  [data-section-id="{{ section.id }}"] .faq__answer p:last-child {
    margin-bottom: 0;
  }

  [data-section-id="{{ section.id }}"] .faq__answer a {
    color: inherit;
    text-decoration: underline;
  }

  /* Desktop */
  @media (min-width: 900px) {
    [data-section-id="{{ section.id }}"] .faq__heading {
      font-size: 3.6rem;
      margin-bottom: 3rem;
    }

    [data-section-id="{{ section.id }}"] .faq__summary {
      padding: 1.75rem 0;
    }

    [data-section-id="{{ section.id }}"] .faq__question {
      font-size: 1.8rem;
    }

    [data-section-id="{{ section.id }}"] .faq__answer {
      font-size: 1.6rem;
      padding-bottom: 1.75rem;
    }
  }
</style>

<section data-section-id="{{ section.id }}" class="faq">
  <div class="faq__inner">
    {%- if section.settings.heading != blank -%}
      <h2 class="faq__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <ul class="faq__list">
        {%- for block in section.blocks -%}
          <li class="faq__item" {{ block.shopify_attributes }}>
            <details class="faq__details"{% if forloop.first and section.settings.open_first %} open{% endif %}>
              <summary class="faq__summary">
                <span class="faq__question">{{ block.settings.question }}</span>
                <span class="faq__icon" aria-hidden="true"></span>
              </summary>
              <div class="faq__answer">
                {{ block.settings.answer }}
              </div>
            </details>
          </li>
        {%- endfor -%}
      </ul>
    {%- else -%}
      <p style="text-align: center; opacity: 0.6;">Add question blocks using the theme editor</p>
    {%- endif -%}
  </div>
</section>

