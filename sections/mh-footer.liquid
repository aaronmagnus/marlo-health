{%- comment -%}
  MH Footer Section
  - Dark footer with brand info, newsletter signup, and menu columns
  - Uses MH typography helper classes
{%- endcomment -%}

<style>
  [data-section-id="{{ section.id }}"].mh-footer {
    --mh-footer-bg: {{ section.settings.background_color }};
    --mh-footer-padding-top: {{ section.settings.padding_top }}px;
    --mh-footer-padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: var(--mh-footer-bg);
    padding-top: var(--mh-footer-padding-top);
    padding-bottom: var(--mh-footer-padding-bottom);
  }

  [data-section-id="{{ section.id }}"] .mh-footer__inner {
    max-width: var(--site-max-width, 1400px);
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__main {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__brand {
    display: flex;
    flex-direction: column;
    max-width: 480px;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__logo {
    max-width: {{ section.settings.logo_width }}px;
    height: auto;
    margin-bottom: 2.4rem;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__heading {
    color: #FFFFFF;
    margin-bottom: 3.2rem;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__body {
    color: #FDFCFC;
    margin-bottom: 0.8rem;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__tagline {
    color: #DFDBD8;
    margin-bottom: 2.4rem;
  }

  /* Newsletter form */
  [data-section-id="{{ section.id }}"] .mh-footer__newsletter {
    margin-top: 0;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__newsletter-form {
    display: flex;
    align-items: center;
    position: relative;
    max-width: 380px;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__newsletter-input {
    width: 100%;
    padding: 14px 50px 14px 20px;
    background: transparent;
    border: 2px solid #F8F7F7;
    border-radius: 12px;
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.6;
    color: #FFFFFF;
    outline: none;
    transition: border-color 200ms ease;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__newsletter-input::placeholder {
    color: #FFFFFF;
    opacity: 1;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__newsletter-input:focus {
    border-color: #FFFFFF;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__newsletter-btn {
    position: absolute;
    right: 16px;
    top: 50%;
    transform: translateY(-50%);
    background: transparent;
    border: none;
    padding: 0;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #FFFFFF;
    transition: opacity 200ms ease;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__newsletter-btn:hover {
    opacity: 0.7;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__newsletter-btn svg {
    width: 20px;
    height: 20px;
  }

  /* Menus */
  [data-section-id="{{ section.id }}"] .mh-footer__menus {
    display: flex;
    flex-wrap: wrap;
    gap: 3rem;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__menu-col {
    min-width: 140px;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__menu-heading {
    margin-bottom: 1rem;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__menu-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__menu-link {
    color: #FDFCFC;
    text-decoration: none;
    transition: opacity 200ms ease;
  }

  [data-section-id="{{ section.id }}"] .mh-footer__menu-link:hover {
    opacity: 0.7;
  }

  /* Desktop layout */
  @media (min-width: 900px) {
    [data-section-id="{{ section.id }}"] .mh-footer__main {
      flex-direction: row;
      justify-content: space-between;
      gap: 4rem;
    }

    [data-section-id="{{ section.id }}"] .mh-footer__brand {
      flex: 1;
    }

    [data-section-id="{{ section.id }}"] .mh-footer__menus {
      flex: 0 0 auto;
      gap: 4rem;
    }
  }

  @media (min-width: 1200px) {
    [data-section-id="{{ section.id }}"] .mh-footer__inner {
      padding: 0 6.4rem;
    }
  }
</style>

<footer data-section-id="{{ section.id }}" class="mh-footer">
  <div class="mh-footer__inner">
    <div class="mh-footer__main">
      <div class="mh-footer__brand">
        {%- if section.settings.logo != blank -%}
          <img
            class="mh-footer__logo"
            src="{{ section.settings.logo | image_url: width: 400 }}"
            alt="{{ section.settings.logo.alt | default: shop.name | escape }}"
            width="{{ section.settings.logo_width }}"
            height="auto"
            loading="lazy"
          >
        {%- endif -%}

        {%- if section.settings.heading != blank -%}
          <p class="mh-heading-3 mh-footer__heading">{{ section.settings.heading }}</p>
        {%- endif -%}

        {%- if section.settings.body_text != blank -%}
          <p class="mh-body mh-footer__body">{{ section.settings.body_text }}</p>
        {%- endif -%}

        {%- if section.settings.tagline != blank -%}
          <p class="mh-body-small mh-footer__tagline">{{ section.settings.tagline }}</p>
        {%- endif -%}

        {%- if section.settings.show_newsletter -%}
          <div class="mh-footer__newsletter">
            {%- form 'customer', class: 'mh-footer__newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input
                type="email"
                name="contact[email]"
                class="mh-footer__newsletter-input mh-body"
                placeholder="{{ section.settings.newsletter_placeholder }}"
                required
                autocomplete="email"
              >
              <button type="submit" class="mh-footer__newsletter-btn" aria-label="Subscribe">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </button>
            {%- endform -%}
          </div>
        {%- endif -%}
      </div>

      <div class="mh-footer__menus">
        {%- if section.settings.menu != blank -%}
          {%- for link in linklists[section.settings.menu].links -%}
            <div class="mh-footer__menu-col">
              <p class="mh-subheading mh-footer__menu-heading">{{ link.title }}</p>
              {%- if link.links.size > 0 -%}
                <ul class="mh-footer__menu-list">
                  {%- for child_link in link.links -%}
                    <li>
                      <a href="{{ child_link.url }}" class="mh-body mh-footer__menu-link">{{ child_link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
          {%- endfor -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "MH Footer",
  "tag": "section",
  "class": "mh-footer-section",
  "settings": [
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "range",
      "id": "logo_width",
      "label": "Logo width",
      "min": 50,
      "max": 300,
      "step": 10,
      "default": 140,
      "unit": "px"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Science-backed daily nutrition for dogs"
    },
    {
      "type": "text",
      "id": "body_text",
      "label": "Body text",
      "default": "Science for your dog's every day health"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Ingredient deep-dives, feeding guidance, and early access"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_placeholder",
      "label": "Input placeholder",
      "default": "Sign up for our newsletter"
    },
    {
      "type": "header",
      "content": "Menu"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "footer",
      "info": "Top-level items become column headings, nested items become links"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#161413"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 220,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 220,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "presets": [
    {
      "name": "MH Footer",
      "settings": {
        "heading": "Science-backed daily nutrition for dogs",
        "body_text": "Science for your dog's every day health",
        "tagline": "Ingredient deep-dives, feeding guidance, and early access"
      }
    }
  ]
}
{% endschema %}
