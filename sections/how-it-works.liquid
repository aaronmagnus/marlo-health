      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "step",
      "name": "Step",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Step 1: Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description",
          "default": "Add a description for this step here."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "MH 3 Column Grid",
      "blocks": [
        {
          "type": "step",
          "settings": {
            "heading": "Step 1: Mix",
